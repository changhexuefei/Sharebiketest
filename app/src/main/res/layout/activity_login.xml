<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                tools:context=".ui.LoginActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/userNameArea"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="#dad5d5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="用户名"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入用户名"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColorHint="#c2baba"
            android:textCursorDrawable="@null"
            android:textSize="12sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/passwordArea"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/userNameArea"
        android:layout_below="@+id/userNameArea"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="#dad5d5">

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="密  码"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColorHint="#c2baba"
            android:textCursorDrawable="@null"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/login_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/passwordArea"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="#c6bfbf"
        android:gravity="center"
        android:text="@string/confrim"
        android:textColor="#ffffff"
        android:textSize="18sp"/>

</RelativeLayout>