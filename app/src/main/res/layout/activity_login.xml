<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                tools:context=".ui.LoginActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#dad5d5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手机号"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/userPhone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="20dp"
            android:textColorHint="#c2baba"
            android:textCursorDrawable="@null"
            android:textSize="12sp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/userName"
        android:layout_below="@+id/userName"
        android:layout_marginTop="10dp"
        android:background="#dad5d5">

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="密  码"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColorHint="#c2baba"
            android:textCursorDrawable="@null"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/login_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#c6bfbf"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/confrim"
        android:textColor="#ffffff"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_confirm"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="点击-确定，即表示已阅读并同意"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv1"
            android:enabled="true"
            android:gravity="center"
            android:text="《用车服务条例》"
            android:textColor="#ea0d0d"
            android:textSize="12sp"/>
    </LinearLayout>


</RelativeLayout>